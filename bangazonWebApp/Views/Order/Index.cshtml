@*author: Kristen Norris
//purpose: shopping cart view *@
@model bangazonWebApp.Models.OrderViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Details";
}

@if (Model == null)
{
    <h2>Shopping cart</h2>
    <p>You currently do not have a shopping cart open</p>
    <a asp-action="Create" >Start New Order</a>

}
else
{
    <h2>Order @Html.DisplayFor(model => model.Order.Id)</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Order.PaymentId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Order.PaymentId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Order.DateCreated)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Order.DateCreated)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Order.DateClosed)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Order.DateClosed)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ProductList)
            </dt>
            @foreach (var item in Model.ProductList)
            {

                <dd>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </dd>
            }
        </dl>

    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Order.Id">Edit</a> |
    </div>

}


